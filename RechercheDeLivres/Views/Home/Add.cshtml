@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "_Layout";
}

@model RechercheDeLivres.Models.Livre

<div class="container-fluid">
    <form asp-action="Add">
        <div class="form-group">
            <label asp-for="Titre">Titre</label>
            <input type="text" asp-for="Titre" class="form-control" />
            <span asp-validation-for="Titre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Auteur">Auteur</label>
            <input type="text" asp-for="Auteur" class="form-control" />
            <span asp-validation-for="Auteur" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Editeur">Éditeur</label>
            <input type="text" asp-for="Editeur" class="form-control" />
            <span asp-validation-for="Editeur" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="fas fa-search"></i>
            <span>Ajouter une page</span>
        </button>
    </form>
</div>